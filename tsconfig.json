{
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "module": "es2015",
    "moduleResolution": "Node",
    "outDir": "./",
    "rootDir": "src",
    "sourceMap": true,
    "target": "ES5"
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}